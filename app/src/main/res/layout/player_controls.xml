<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPlayerBackground"
    android:gravity="center"
    android:paddingBottom="@dimen/playerBottomPadding"
   >
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/playerEdgeHeight"
        android:background="@color/colorPlayerEdge"
        android:layout_marginBottom="@dimen/playerEdgeMarginBottom"
         />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/song_name_ironic"
            android:textStyle="bold"
            android:layout_margin="@dimen/trackTextMarginBottom"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/dividerMarginsLeftRight"
        android:layout_marginLeft="@dimen/dividerMarginsLeftRight"
        android:layout_height="@dimen/dividerHeight"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="@dimen/dividerMarginBottom"
        android:layout_marginTop="@dimen/dividerMarginTop" />


<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    android:gravity="center">

        <ImageView
            android:layout_width="@dimen/smallButtonSizes"
            android:layout_height="@dimen/smallButtonSizes"
            android:src="@drawable/repeat"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            />

    <ImageView
        android:layout_width="@dimen/mediumButtonSizes"
        android:layout_height="@dimen/mediumButtonSizes"
        android:layout_marginLeft="@dimen/mediumButtonSideMargin"
        android:src="@drawable/prev"
        android:layout_gravity="center"/>

    <ImageView
        android:layout_width="@dimen/bigButtonSizes"
        android:layout_height="@dimen/bigButtonSizes"
        android:layout_marginLeft="@dimen/bigButtonSideMargin"
        android:layout_marginRight="@dimen/bigButtonSideMargin"
        android:src="@drawable/play"
        android:layout_gravity="center"/>

    <ImageView
        android:layout_width="@dimen/mediumButtonSizes"
        android:layout_height="@dimen/mediumButtonSizes"
        android:layout_marginRight="@dimen/mediumButtonSideMargin"
        android:src="@drawable/next"
        android:layout_gravity="center"/>
    <ImageView
        android:layout_width="@dimen/smallButtonSizes"
        android:layout_height="@dimen/smallButtonSizes"
        android:src="@drawable/shuffle"
        android:layout_gravity="center"/>



</LinearLayout>

</LinearLayout>